			<PropertyColumn Property="x => x.AccountName" Title="Account Name" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell" Sortable="false" />
			<PropertyColumn Property="x => x.ActivityTrackID" Title="Act Tracker ID" Sortable="false"
				HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell reddit-mono-400" HeaderStyle="min-width:120px" />
			<PropertyColumn Property="x => x.Class2" Title="Class 2" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell" HeaderStyle="min-width:180px" />
			<PropertyColumn Property="x => x.CurrencyCode" Title="Currency" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell" Filterable="false" Sortable="false" />
			<PropertyColumn Property="x => x.BudgetedAmount" Title="Budget Amount" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell reddit-mono-500"
