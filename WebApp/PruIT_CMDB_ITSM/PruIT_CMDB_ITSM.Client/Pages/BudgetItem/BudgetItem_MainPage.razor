							Filterable="false" Sortable="false"
							HeaderStyle="min-width:150px" CellStyle="text-align:right" Context="item">
				<CellTemplate>
					<MudText Typo="Typo.body1" Class="reddit-mono-500" Color="@(item.Item.RemainingAmount > 0 ? Color.Success : (item.Item.RemainingAmount < 0 ? Color.Error : Color.Default))">
						@item.Item.RemainingAmount.ToString("#,##0")
					</MudText>
				</CellTemplate>
			</TemplateColumn>
			<PropertyColumn Property="x => x.TaxRateText" Title="Tax Rate" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell" Sortable="false"
				HeaderStyle="min-width:80px"/>
			<PropertyColumn Property="x => x.ObjectCode" Title="Budget ID" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell reddit-mono-400" HeaderStyle="min-width:150px" />
			<PropertyColumn Property="x => x.VersionName" Title="Version" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell" />
			<TemplateColumn Title="Action" HeaderClass="pru-mud-datagrid-hdr main-pg" Sortable="false" Filterable="false" StickyRight="true"
							CellClass="pru-mud-datagrid-cell" CellStyle="padding-inline-end:4px; padding-inline-start:4px">
				<CellTemplate>
					<MudStack Row="true" Spacing="1">
						<MudIconButton Icon="@Icons.Material.Rounded.Edit" Size="Size.Small" Color="Color.Primary" OnClick="@(args => CreateOrEditRecord(context.Item.Id))" />
						<MudIconButton Icon="@Icons.Material.Rounded.FileCopy" Size="Size.Small" Color="Color.Success" OnClick="@(args => CloneAndEditRecord(context.Item.Id))" />
						<MudIconButton Icon="@Icons.Material.Rounded.Visibility" Size="Size.Small" Color="Color.Info" OnClick="@(args => ViewFullRecord(context.Item.Id))" />
						<MudIconButton Icon="@Icons.Material.Rounded.Delete" Size="Size.Small" Color="Color.Default" OnClick="@(args => DeleteRecord(context.Item))" />
					</MudStack>
				</CellTemplate>
			</TemplateColumn>
		</Columns>
		<PagerContent>
			<MudDataGridPager T="BudgetItem" Class="pru-mud-datagrid-pager" PageSizeOptions="new[] {10, 30, 50, 80, 100}" />
		</PagerContent>
	</MudDataGrid>
</MudPaper>

