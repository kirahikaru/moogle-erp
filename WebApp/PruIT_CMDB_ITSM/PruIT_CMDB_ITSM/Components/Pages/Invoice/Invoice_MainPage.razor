				 ColumnResizeMode="ResizeMode.Container" SortMode="SortMode.Multiple" @bind-SelectedItem=SelectedObject SelectOnRowClick="true"
				 RowClassFunc="SelectedRowClassFunc" RowClass="mud-datagrid-row" T="Invoice">
	<Columns>
		<TemplateColumn Title="LBU" StickyLeft="true" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell" Context="rowData">
			<CellTemplate>
				<MudStack Row=true AlignItems="AlignItems.Center" Justify="Justify.FlexStart" Spacing="1">
					<MudImage Src=@(_lbuFlagList[rowData.Item.LBU!]) Height="12" />
					<MudText Typo="Typo.body1">@rowData.Item.LBU</MudText>
				</MudStack>
			</CellTemplate>
		</TemplateColumn>
		<PropertyColumn Property="x => x.EffectiveDate" Format="dd-MMM-yyyy" Title="Date" StickyLeft="true" 
			HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell" 
			HeaderStyle="min-width:120px" CellStyle="text-align:center" />
		<PropertyColumn Property="x => x.ObjectCode" Title="PR#" StickyLeft="true" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell reddit-mono-400" Sortable="false" />
		<PropertyColumn Property="x => x.ObjectName" Title="Description" StickyLeft="true" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell" />
		@* <PropertyColumn Property="x => x.LBU" Title="LBU" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell" /> *@
		<PropertyColumn Property="x => x.VendorName" Title="Vendor" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell" />
		<PropertyColumn Property="x => x.ExpiryDate" Title="Expiry" Format="dd-MMM-yyyy" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell" Filterable="false" />
		<PropertyColumn Property="x => x.CurrencyCode" Title="Currency" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell" Filterable="false" Sortable="false" />
			<PropertyColumn Property="x => x.TotalAmount" Title="Total Amount" Format="#,##0.00" Filterable="false" Sortable="false"
							HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell reddit-mono-500" CellStyle="text-align:right" />
			<PropertyColumn Property="x => x.TotalTaxAmount" Title="Total Tax" Format="#,##0.00" Filterable="false" Sortable="false"
			HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell reddit-mono-500" CellStyle="text-align:right"  />
			<PropertyColumn Property="x => x.AccSysSubmID" Title="Acc. Sys. ID" Filterable="false" Sortable="false"
							HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell reddit-mono-400"
							HeaderStyle="min-width:110px"/>
		<TemplateColumn Title="Status" HeaderClass="pru-mud-datagrid-hdr main-pg" CellStyle="text-align:center" CellClass="pru-mud-datagrid-cell">
			<CellTemplate>
				<MudChip Size="Size.Small" Class="@(!string.IsNullOrEmpty(context.Item.WorkflowStatus) ? _statusCssClassList[context.Item.WorkflowStatus!] : "status-chip-default-light")" Style="padding:2px 8px; font-size:9pt">
					@InvoiceWFStatuses.GetDisplayText(@context.Item.WorkflowStatus).ToUpper()
				</MudChip>
			</CellTemplate>
		</TemplateColumn>
        <TemplateColumn Title="Action" HeaderClass="pru-mud-datagrid-hdr main-pg" Sortable="false" Filterable="false" StickyRight="true"
                            CellClass="pru-mud-datagrid-cell" CellStyle="padding-inline-end:4px; padding-inline-start:4px" HeaderStyle="width:100px; justify-items:center">
			<CellTemplate>
				<MudStack Row="true" Spacing="1">
					<MudIconButton Icon="@Icons.Material.Rounded.Edit" Size="Size.Small" Color="Color.Primary" OnClick="@(args => CreateOrEditRecord(context.Item.Id))" />
					<MudIconButton Icon="@Icons.Material.Rounded.FileCopy" Size="Size.Small" Color="Color.Success" OnClick="@(args => CloneAndEditRecord(context.Item.Id))" />
					<MudIconButton Icon="@Icons.Material.Rounded.Visibility" Size="Size.Small" Color="Color.Info" OnClick="@(args => ViewFullRecord(context.Item.Id))" />
					<MudIconButton Icon="@Icons.Material.Rounded.Delete" Size="Size.Small" Color="Color.Default" OnClick="@(args => DeleteRecord(context.Item))" />
				</MudStack>
			</CellTemplate>
		</TemplateColumn>
	</Columns>
	<PagerContent>
		<MudDataGridPager T="Invoice" Class="pru-mud-datagrid-pager" PageSizeOptions="new[] {10, 20, 30, 50, 80, 100}" />
	</PagerContent>
</MudDataGrid>
</MudPaper>

