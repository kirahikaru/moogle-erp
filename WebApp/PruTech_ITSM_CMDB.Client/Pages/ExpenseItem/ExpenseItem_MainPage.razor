                            HeaderStyle="min-width:200px" />
            <PropertyColumn Property="x => x.ActivityTrackID" Title="Act Tracker ID" Sortable="false"
                            HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell reddit-mono-400"
                            HeaderStyle="min-width:100px" />
            <PropertyColumn Property="x => x.BudgetItemName" Title="Budget Line" HeaderClass="pru-mud-datagrid-hdr main-pg" CellClass="pru-mud-datagrid-cell"
                            HeaderStyle="min-width:250px" />
