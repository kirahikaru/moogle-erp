	protected override async Task<GridData<PruCoreInfraStack>> ServerDataFunc(GridState<PruCoreInfraStack> gridState)
	{
		if (IsSearching) return new GridData<PruCoreInfraStack>
			{
				Items = [],
				TotalItems = 0
			};

		try
		{
			IsSearching = true;
			int totalItemCount = 0;
			//if (gridState.SortDefinitions.Count > 0)
			//{
			//	var firstSort = gridState.SortDefinitions.First();
			//	result = firstSort.Descending
